---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Guifré Puig - Desarrollador frontend de Barcelona, con experiencia laboral desde el 2021.' />
    <meta property='og:image' content='./images/gf_photo_cutted.webp' />
    <meta property='og:description' content='Portfolio de Guifré Puig, desarrollador frontend de Barcelona con experiencia laboral desde el 2021.' />
    <meta property='og:title' content='Guifré Puig - Desarrollador frontend' />
    <meta name='keywords' content='Guifré Puig, Frontend, Barcelona, Desarrollador, Web' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.webp' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "Onest";
    src: url(../../fonts/Onest.ttf) format("truetype");
  }

  @font-face {
    font-family: "NunitoSans";
    src: url(../../fonts/NunitoSans.ttf) format("truetype");
  }

  :root {
    --white: #ffffff;
    --black: #000000;
    /* color PALETTE */
    --color-blue: #0b0d3f;
    --color-yellow: #e6c339;
    --color-brown: #a69553;
    --color-gray: #66614d;
    --color-purple: #545791;

    --backgroundGradient: linear-gradient(0deg, rgba(3, 4, 41, 1) 0%, rgba(11, 13, 63, 1) 49%, rgba(7, 11, 92, 1) 100%);
  }
  *,
  *::before,
  *::after {
    box-sizing: border-box;
    padding: 0;
    margin: 0;
  }
  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
    background-size: 224px;
    scroll-behavior: smooth;
  }
  body {
    width: 100%;
    min-height: 100vh;
    background: var(--backgroundGradient);
    color: var(--white);
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: "Onest", sans-serif;
    line-height: 150%;
  }

  h1 {
    font-size: clamp(2rem, 5vw, 2.5rem);
  }

  h2 {
    font-size: clamp(1.75rem, 5vw, 2rem);
    color: var(--color-yellow);
  }

  h3 {
    font-size: clamp(1.5rem, 4vw, 1.75rem);
  }

  h4 {
    font-size: clamp(1.25rem, 3vw, 1.5rem);
  }

  /* h5 {
    font-size: clamp(0.875rem, 3vw, 1rem);
  } */

  p {
    font-family: "NunitoSans", sans-serif;
    font-size: clamp(0.875rem, 2vw, 1rem);
    line-height: 150%;
    letter-spacing: 0.04ch;
    /* text-wrap: balance; */
  }

  li {
    font-family: "NunitoSans", sans-serif;
    font-size: clamp(0.875rem, 2vw, 1rem);
    line-height: 150%;
    letter-spacing: 0.04ch;
    list-style: none;
  }

  a {
    text-decoration: none;
    color: var(--white);
    font-family: "NunitoSans", sans-serif;
    font-size: 0.875rem;
  }
</style>
