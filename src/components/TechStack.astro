---
const technologies = [
	"TypeScript",
	"Angular",
	"React",
	"Next.js",
	"Tailwind CSS",
	"Node.js",
	"Astro",
	"Firebase",
	"Redux",
	"MongoDB",
	"Jasmine",
	"Playwright",
];
---

<div
	class='bg-card-light dark:bg-card-dark p-6 rounded-2xl shadow-lg border border-gray-200 dark:border-gray-800 flex flex-col justify-between transition-colors duration-300'
>
	<div>
		<h3
			class='text-lg font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2'
		>
			<span class='material-icons-outlined text-primary'>code</span> Tech Stack
		</h3>
		<div class='flex flex-wrap gap-3'>
			{
				technologies.map((tech) => (
					<span
						class={`px-3 py-1 rounded-full text-xs font-medium border transition-colors`}
					>
						{tech === "TypeScript" && <span class='mr-1'>TS</span>}
						{tech}
					</span>
				))
			}
		</div>
	</div>
	<div class='mt-6 pt-4 border-t border-gray-200 dark:border-gray-700'>
		<p class='text-xs text-gray-500 dark:text-gray-400'>
			Always learning new technologies to improve performance.
		</p>
	</div>
</div>
