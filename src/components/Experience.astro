---
import { getI18N } from "../i18n/index";
import ExperienceItem from "./ExperienceItem.astro";

const { currentLocale } = Astro;
const i = getI18N({ currentLocale });
---

<article>
  <div id='experience'></div>
  <h2>{i.EXPERIENCE_TITLE}</h2>
  <ExperienceItem />
</article>

<style>
  article {
    margin: 32px 0;
    padding: 16px;
    position: relative;
  }

  div {
    position: absolute;
    top: -50px;
  }
</style>
