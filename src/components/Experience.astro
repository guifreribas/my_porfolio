---
import { getI18N } from "../i18n/index";
import ExperienceItem from "./ExperienceItem.astro";

const { currentLocale } = Astro;
const i = getI18N({ currentLocale });
---

<article class='relative mb-32'>
	<div
		id='experience'
		class='absolute -top-14'
	>
	</div>
	<h2 class='text-4xl font-semibold mb-16'>{i.EXPERIENCE_TITLE}</h2>
	<ExperienceItem />
</article>
